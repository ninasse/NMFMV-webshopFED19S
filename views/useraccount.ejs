<%- include ("header.ejs") %>
<%- include ("navbar.ejs") %>
<main>
    <div class="pageheadline">
        <% if (passwordChanged.exists && passwordChanged.value) { %>
        <h1>Lösenordet är ändrat</h1>
        <% } else if (passwordChanged.exists && !passwordChanged.value) { %>
        <h1>Fel lösenord</h1>
        <% } else { %>
        <h1>Välkommen <i> <%= loggedIn.firstName %> </i> </h1>
        <% } %>
    </div>
    <div class="userinfo">
        <h3>Användare: </h3>
        <span><%= loggedIn.firstName %> <%= loggedIn.lastName %></span>
        <span><%= loggedIn.address %></span>
        <span><%= loggedIn.email %></span>
    </div>
    <div class="orderinfo">
        <h3>Önskelista: </h3>
        <ul>

            <% loggedIn.wishlist.forEach( (obj)=> { %>
            <li>
                <div>Album: <%= obj.album %> </div>
                <div>Artist: <%= obj.artist %> </div>
                <div>Album ID: <%= obj.productId %> </div>

            </li>
            <% }); %>
        </ul>
    </div>
    <form class="startbuttons" method="get">
        <button type="submit" formaction="gallery">GÅ TILL WEBBSHOP</button>
        <button type="submit" formaction="checkout">GÅ TILL CHECKOUT</button>
        <button type="submit" formaction="logout">LOGGA UT</button>
    </form>
    <div class="passwordinfo">
        <form action="<%= ROUTE.userAccount %>" method="POST">
            <h3>Ändra lösenord:</h3>
            <label>Nuvarande lösenord:</label>
            <input type="password" name="currentpassword" placeholder="Nuvarande lösenord" />
            <label>Nytt lösenord:</label>
            <input type="password" name="newpassword" placeholder="Nytt lösenord" />
            <button type="submit">Ändra lösenord</button>
        </form>
    </div>
</main>
<%- include ("footer.ejs") %>